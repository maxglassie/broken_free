<%= render 'home/welcome_jumbotron' %>

<div class="container">
  <div class="row">
  <div class="col s12 m4 l3">
    <div class="row">
      <div class="col s12 m12">
        <div class="card white">
          <div class="card-content black-text">
            <div class="regions">
              <span class="card-title">Regions</span>
              <% @presenter.all_regions.each do |region| %>
              <%= link_to "#{region.title}", root_path(:region => region.id)%>
              <br>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

 <div class="col s12 m8 l9">
    <div class="row">
      <div class="col s12 m12">
        <div class="card white">
          <div class="card-content black-text">
            <div class="countries">
                <% if params[:region].nil? %>
                  <span class="card-title">All Countries</span>
                <% else %>
                  <span class="card-title"> <%= @presenter.region_title(params[:region]) %></span>
                <% end %>
              <table class="bordered">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Region</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @presenter.show_countries(params[:region]).each do |country| %>
                      <tr>
                        <td><%= link_to "#{country.name}", countries_path(country) %></td>
                        <td><%= country.region.title %></td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>